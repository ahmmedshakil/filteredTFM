FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "alpha.*"
    {
        nAlphaCorr      5;
        nAlphaSubCycles 2;

        smoothLimiter   0.1;

        implicitPhasePressure yes;
        solver          GAMG;
        smoother        symGaussSeidel;
        tolerance       1e-9;
        relTol          0;
        minIter         1;
    }

    p_rgh
    {
        solver          PCG;
        preconditioner	        DIC;
        tolerance       1e-8;
        relTol          0.1;
        maxIter         25;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
        maxIter 200;
    }


}

PIMPLE
{
    nOuterCorrectors    10;
    nCorrectors         10;
    nNonOrthogonalCorrectors 0;
    pRefCell 0;
    pRefValue 0;
    
    residualControl
    {
        "U.*"
        {
                tolerance  1e-5;
                relTol      0;
        }
        "p_rgh"
        {
                tolerance  1e-5;
                relTol      0;
        }
        "alpha.*"
        {
                tolerance  1e-5;
                relTol      0;
        }

     }
}

relaxationFactors
{
    equations
    {

         "U.fluid|U.particles|alpha.fluid|alpha.particles"  0.5;        
         p_rgh        0.2;

         "(U.fluid|U.particles|alpha.fluid|alpha.particles)Final"  1;
         p_rghFinal 1;
    }
}


